@{
    if(Roles.IsUserInRole("booked") || Roles.IsUserInRole("admin"))
    {
        var db = Database.Open("HOME_PHUMY");
        int status = Convert.ToInt16(Request["status"]);
        int newStatus;
        if(status == 1){
            newStatus = 0;
        }else{
            newStatus = 1;
        }

        string updateCommand = "UPDATE Config Set LockUpdateWeekJob_KHVT = " + newStatus;
        db.Execute(updateCommand);
    }

}